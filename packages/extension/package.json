{
  "name": "virtualme2",
  "displayName": "Virtual Me 2.0",
  "publisher": "iseg-ide-sub1",
  "icon": "assets/icons/icon.png",
  "description": "VirtualMe Project 2.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/iseg-ide-sub1/virtualme2"
  },
  "homepage": "https://github.com/iseg-ide-sub1/virtualme2",
  "bugs": {
    "url": "https://github.com/iseg-ide-sub1/virtualme2/issues"
  },
  "qna": "https://github.com/iseg-ide-sub1/virtualme2/issues",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "galleryBanner": {
    "color": "#1A1A1A",
    "theme": "dark"
  },
  "categories": [
    "AI",
    "Chat",
    "Education",
    "Machine Learning"
  ],
  "keywords": [
    "copilot",
    "openai",
    "ollama",
    "chat",
    "LLM"
  ],
  "activationEvents": [],
  "main": "./out/extension/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "virtualme-control",
          "title": "%plugin.control%",
          "icon": "assets/icons/sidebar1.png"
        },
        {
          "id": "virtualme-chat",
          "title": "%plugin.chat%",
          "icon": "assets/icons/sidebar2.png"
        }
      ]
    },
    "views": {
      "virtualme-control": [
        {
          "type": "webview",
          "id": "virtualme.control",
          "name": "%plugin.control%",
          "icon": "assets/icons/sidebar1.png"
        }
      ],      
      "virtualme-chat": [
        {
          "type": "webview",
          "id": "virtualme.chat",
          "name": "%plugin.chat%",
          "icon": "assets/icons/sidebar2.png"
        }
      ]
    },
    "commands": [
      {
        "command": "virtualme.start",
        "title": "%cmd.record.start%",
        "icon": "$(run)"
      },
      {
        "command": "virtualme.stop",
        "title": "%cmd.record.stop%",
        "icon": "$(stop-circle)"
      },
      {
        "command": "virtualme.savelog",
        "title": "$cmd.logs.save%",
        "icon": "$(save)"
      },
      {
        "command": "virtualme2.goto.settings",
        "title": "%cmd.goto.settings%",
        "icon": "$(gear)"
      },
      {
        "command": "virtualme2.goto.config",
        "title": "%cmd.goto.config%",
        "icon": "$(json)"
      },
      {
        "command": "virtualme2.load.sessions",
        "title": "%cmd.load.sessions%",
        "icon": "$(history)"
      },
      {
        "command": "virtualme2.chat.new",
        "title": "%cmd.chat.new%",
        "icon": "$(plus)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "virtualme2.goto.settings",
          "when": "view == virtualme.chat",
          "group": "navigation@4"
        },
        {
          "command": "virtualme2.goto.config",
          "when": "view == virtualme.chat",
          "group": "navigation@3"
        },
        {
          "command": "virtualme2.load.sessions",
          "when": "view == virtualme.chat",
          "group": "navigation@2"
        },
        {
          "command": "virtualme2.chat.new",
          "when": "view == virtualme.chat",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "%plugin.name%",
      "properties": {
        "virtualMe.chat.loadLastChatSession": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%desc.loadLastChatSession%",
          "order": 0
        },
        "virtualMe.chat.continuousChat": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%desc.continuousChat%",
          "order": 1
        },
        "virtualMe.chat.displayInfoMessage": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%desc.displayInfoMessage%",
          "order": 2
        },
        "virtualMe.chat.displayTokensUsage": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%desc.displayTokensUsage%",
          "order": 3
        },
        "virtualMe.chat.maxChatHistory": {
          "type": "number",
          "default": 128,
          "minimum": -1,
          "maximum": 255,
          "markdownDescription": "%desc.maxChatHistory%",
          "order": 4
        },
        "virtualMe.chat.sendRequestShortcut": {
          "type": "string",
          "enum": [
            "Ctrl+Enter",
            "Enter"
          ],
          "default": "Ctrl+Enter",
          "markdownDescription": "%desc.sendRequestShortcut%",
          "order": 5
        },
        "virtualMe.chat.codeHighlightTheme": {
          "type": "string",
          "enum": [
            "github",
            "arduino-light",
            "qtcreator-light",
            "androidstudio",
            "github-dark",
            "github-dark-dimmed"
          ],
          "default": "github",
          "markdownDescription": "%desc.codeHighlightTheme%",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "node build.mjs && webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce:package": "node build.mjs && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "nanoid": "^5.1.5",
    "ollama": "^0.5.14",
    "openai": "^4.91.1",
    "@types/lodash": "^4.17.13",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "bindings": "^1.5.0",
    "comment-json": "^4.2.3",
    "density-clustering": "^1.3.0",
    "dotenv": "^16.4.5",
    "graphology": "^0.26.0",
    "ignore": "^5.3.1",
    "lodash": "^4.17.21",
    "ml-matrix": "^6.12.1",
    "node-machine-id": "^1.1.12",
    "numeric": "^1.2.6",
    "p-limit": "^3.1.0",
    "sqlite": "^5.1.1",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.8.2",
    "uuid": "^9.0.1",
    "vsce": "^2.15.0",
    "web-tree-sitter": "^0.24.4"
  }
}