    "swiftmailer/swiftmailer",
    "phpoffice/phpspreadsheet",
    "intervention/image",
    "vlucas/phpdotenv",
    "predis/predis",
    "ramsey/uuid",
    "fakerphp/faker",
    "league/flysystem",
